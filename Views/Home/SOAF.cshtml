<hr />

<div class="row">
    <div class="col-md-12">
        <p id="out"></p>
    </div>
</div>


<hr />

<div class="row">
    <div class="col-md-12">
        <div id="code">
            <pre class="brush: js">
                        $("#btnK").click(function () {
                        //declare an empty array
                        var myArray = new Array();

                        //Get all the numbers
                        myArray.push(+$("#num1").val());
                        myArray.push(+$("#num2").val());
                        myArray.push(+$("#num3").val());
                        myArray.push(+$("#num4").val());
                        myArray.push(+$("#num5").val());
                        myArray.push(+$("#num6").val());

                        var kValue = +$("#kValue").val();

                        for (index = 0; index < myArray.length - 1; index++) {
                            var position = myArray.indexOf(kValue - myArray[index], index + 1);
                            if (position > 0) {
                                $("#out").html("<b>" + kValue + "</b> was found by adding array members " + "<span class='target'>" + myArray[index] + " </span> and <span class='target'>" + myArray[position] + "</span>");
                                return;
                            }
               
                            $("#out").text("K was not found!");
                </pre>
        </div>
    </div>
</div>



