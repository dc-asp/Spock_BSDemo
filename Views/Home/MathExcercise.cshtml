
@{
    ViewBag.Title = "MathExcercise";
}

<div class="container">
    <h2>Click button to access Javascript excercises</h2>
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">ENTER</button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog-lg">
            "


            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1>MATH EXCERCISE</h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">

                            <h3>Enter a number in the  empty fields below...</h3>
                            <div class="row">
                                <div class="col-md-4">Enter Number 1</div>
                                <input type="number" id="input1" />
                                <div class="row">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-4">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">Enter Number 2</div>
                                <input type="number" id="input2" />
                                <div class="row">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-4">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">Enter Number 3</div>
                                <input type="number" id="input3" />
                                <div class="row">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-4">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">Enter Number 4</div>
                                <input type="number" id="input4" />
                                <div class="row">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-4">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">Enter Number 5</div>
                                <input type="number" id="input5" />
                                <div class="row">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-4">
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <button type="button" class="btn btn-warning btn-lg" id="mathBtn">SOLVE</button>
                            </div>
                        </div>

                        <div class="col-sm-6">

                            <h1></h1>

                            <h3>Answers will appear below...</h3>

                            <div class="row">
                                <div class="col-lg-8">Min Operation Answer</div>
                                <p id="smallest"></p>
                                <div class="row">
                                    <div class="col-md-8"></div>
                                    <div class="col-md-8">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-8">Max Operation Answer</div>
                                <p id="largest"></p>
                                <div class="row">
                                    <div class="col-md-8"></div>
                                    <div class="col-md-8">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-8">Sum Operation Answer</div>
                                <p id="sum"></p>
                                <div class="row">
                                    <div class="col-md-8"></div>
                                    <div class="col-md-8">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-8">Average Operation Answer</div>
                                <p id="product"></p>
                                <div class="row">
                                    <div class="col-md-8"></div>
                                    <div class="col-md-8">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-8">Multiplication Operation Answer</div>
                                <p id="average"></p>
                                <div class="row">
                                    <div class="col-md-8"></div>
                                    <div class="col-md-8">
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <button type="button" class="btn btn-warning btn-lg" id="clearBtn">CLEAR</button>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="clsBtn">Close</button>
                </div>
            </div>

        </div>
    </div>

</div>



